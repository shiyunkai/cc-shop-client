

.container {
    display: flex;
    flex-direction: column;
}

.inner-container {
    width: 692rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 29rpx;
    margin-bottom: 150rpx;

}

.inner-container > view {
    background-color: #ffffff;
}

.info-container {
    width: 100%;
    height: 328rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-shadow: 2px 5px 8px 3px #A3A3A5FF;
    border-radius: 10px;

}

.info-inner-container {
    width: 100%;
    padding: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.info-left-container {
    height: 222rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    color: #000000D9;
    font-size: 36rpx;
}

.avatar {
    width: 150rpx;
    height: 150rpx;
    display: flex;
}

.info-right-container {
    width: 422rpx;
    height: 222rpx;
    display: flex;
    flex-direction: column;

}

.nickname {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    color: #B0985BFF;
    font-size: 36rpx;
}

.qrcode {
    height: 80rpx;
    width: 80rpx;
    display: flex;
}

.score-container {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
}

.score-progress {
    margin-left: 20rpx;
    width: 300rpx
}

.order-container {
    margin-top: 30rpx;
    padding:0 20rpx;
    width: 100%;
    height: 100rpx;
    box-sizing:border-box;

}

.my-order {
    font-size: 36rpx !important;
}

.menu-container {
    padding:40rpx 0rpx;
    width: 100%;
}

.menu-img {
    width: 38rpx;
    height: 38rpx;
    display: flex;
    margin-bottom: 10rpx;
}

.menu-inner-container {
    display: flex;
    height: 100prx;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    color: #6D7278FF;
    font-size: 32rpx;
}

.list-container {
    width: 100%;
    margin-top: 30rpx;
}

.list-container .list {
    padding: 33rpx !important;
}

.list-left {
    color: #000000;
    font-size: 36rpx;
}

.list-right {
    color: #9E9E9FFF !important;
    font-size: 28rpx;
}
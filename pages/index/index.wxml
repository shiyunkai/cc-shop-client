      </l-tabpanel>
      <l-tabpanel tab="面板" key="six" slot="six">
        <view class="tab-content">面板</view>
      </l-tabpanel>

    </l-tabs>
  </view>

  <image class="recommend" src="/images/home/recommend.png"></image>

  <view class="spu-preview">
    <l-water-flow generic:l-water-flow-item="s-spu-preview" column-gap="50rpx" />
  </view>




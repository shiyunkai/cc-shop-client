<view class="container">
  <s-search s-class="search" />

  <view class="activity">
    <swiper indicator-dots="{{true}}" autoplay="{{true}}" indicator-active-color="#5E5C5C" indicator-color="f0f0f0">
      <swiper-item>
        <image class="activity" src="/images/home/banner1.png"></image>

        <view class="category-imgs">
          <image class="category-left" src="/images/home/category1.png"></image>
          <view class="category-rigth">
            <image class="category-rigth-item" src="/images/home/category2.png"></image>
            <image class="category-rigth-item" src="/images/home/category3.png"></image>
          </view>
        </view>
      </l-tabpanel>

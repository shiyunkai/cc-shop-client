.container {
    display: flex;
    flex-direction: column;
}

.img-container {
    width: 100%;
}

.img {
    width: 100%;
    height: 750rpx;
}

.middle-container {
    display: flex;
    flex-direction: column;
    padding: 0 20rpx;
}

.desc-container {
    display: flex;
    flex-direction: column;
    padding: 20rpx 0 40rpx 0;
}

.title {
    font-size: 28rpx;
    color: #000000ff;
    font-weight: 10rpx;
    margin-bottom: 20rpx;
}

.selected-container {
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}

.selected-item {
    padding-right: 28rpx;
}

.selected-btn {
    position: absolute;
    right: 40rpx;
    width: 45rpx;
    height: 45rpx;
}

.tab-container {
}

.bottom-container {
    width: 100%;
    height: 90rpx;
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    color: #fff;
}

.cart {
    width: 50%;
    height: 90rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #e6c6a4ff;
}

.buy {
    width: 50%;
    height: 90rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #a2313eff;
}

.popup {
    background-color: #fff;
    margin-bottom: 100rpx;
}



.container {
  width: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding:15rpx 0;
  box-shadow: 0px 0px 8px 0px rgba(119,163,149,0.2);
  background-color: #ffffff;
}

.img {
  width: 200rpx;
  height: 200rpx;
}

.inner-container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #535054;
  font-size: 28rpx;
}

.desc {
  padding: 8rpx 5rpx;
  color: #a7a4a7;
  font-size: 22rpx;
}
